<% page_title = "Create access request" %>
<% content_for :page_title, title_with_error_prefix(page_title, @access_request.errors.any?) %>

<% content_for :before_content do %>
  <%= govuk_back_link_to(access_requests_path) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with(
      model: @access_request,
      url: access_requests_path,
      method: :post,
      builder: GOVUKDesignSystemFormBuilder::FormBuilder,
    ) do |f| %>

      <%= f.govuk_error_summary %>

      <h1 class="govuk-heading-l">
        <%= page_title %>
      </h1>

      <p class="govuk-body">
        Use this form to create an access request and approve it immediately.
      </p>

      <%= f.govuk_text_field :first_name, width: "one-half", data: { qa: "first_name" } %>

      <%= f.govuk_text_field :last_name, width: "one-half", data: { qa: "last_name" } %>

      <%= f.govuk_email_field :requester_email, data: { qa: "requester_email" } %>

      <%= f.govuk_email_field :email_address, data: { qa: "email_address" } %>

      <%= f.hidden_field :organisation, value: "Department for Education" %>

      <%= f.hidden_field :reason, value: "Manual creation by user support agent" %>

      <%= f.govuk_submit "Preview", data: { qa: "preview" } %>
    <% end %>
  </div>
</div>
