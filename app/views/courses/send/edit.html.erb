<% page_title = t("helpers.legend.course.is_send") %>
<%= content_for :page_title, title_with_error_prefix("#{page_title} â€“ #{course.name_and_code}", course.errors.any?) %>

<% content_for :before_content do %>
  <%= govuk_back_link_to(details_provider_recruitment_cycle_course_path(course.provider_code, course.recruitment_cycle_year, course.course_code)) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with(
      model: course,
      url: send_provider_recruitment_cycle_course_path(@course.provider_code, @course.recruitment_cycle_year, @course.course_code),
      method: :put,
      builder: GOVUKDesignSystemFormBuilder::FormBuilder,
    ) do |f| %>

      <%= f.govuk_error_summary %>

      <%= f.govuk_check_boxes_fieldset(:is_send,
        caption: { text: course.name_and_code, size: "l" },
        legend: { text: page_title, size: "l", tag: "h1" }) do %>
        <%= f.govuk_check_box(:is_send, 1, 0,
          link_errors: true,
          multiple: false,
          checked: @course.is_send?(course, f.object, :is_send),
          data: { qa: "is_send" }) %>
      <% end %>

      <%= f.govuk_submit course.is_running? ? "Save and publish changes" : "Save", data: { qa: "course__save" } %>

      <p class="govuk-body">
        <%= govuk_link_to(
          "Cancel changes",
          details_provider_recruitment_cycle_course_path(course.provider_code, course.recruitment_cycle_year, course.course_code),
          class: "govuk-link--no-visited-state",
        ) %>
      </p>
    <% end %>
  </div>
</div>
