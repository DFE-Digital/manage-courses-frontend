<%= content_for :page_title, "Pick a start date" %>
<% content_for :before_content do %>
  <% course_creation_back_button do %>
    <%= govuk_back_link_to(@back_link_path) %>
  <% end %>
<% end %>

<%= render 'shared/errors' %>

<h1 class="govuk-heading-xl">
  When does the course start
</h1>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: course,
                  url: continue_provider_recruitment_cycle_courses_start_date_path(
                    @provider.provider_code,
                    @provider.recruitment_cycle_year
                  ),
                  method: :get do |form| %>

      <%= render "courses/new_fields_holder", form: form, except_keys: [:start_date] do |fields| %>
        <%= render 'form_fields', form: fields %>
      <% end %>
    <% end %>
  </div>
</div>
