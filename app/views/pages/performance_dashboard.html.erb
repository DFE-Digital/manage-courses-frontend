<%= content_for :page_title, "Service performance" %>

<h1 class="govuk-heading-xl">
  Service performance
</h1>

<%= render partial: "pages/performance_dashboard/initial_performance_indicators" %>

<%= govuk_tabs(title: "Contents", classes: "app-tabs") do |tab| %>
  <%= tab.slot(:tab, title: "Providers") do %>
    <%= render partial: "pages/performance_dashboard/providers_tab" %>
  <% end %>
  <%= tab.slot(:tab, title: "Courses") do %>
    <%= render partial: "pages/performance_dashboard/courses_tab" %>
  <% end %>
  <%= tab.slot(:tab, title: "Users") do %>
    <%= render partial: "pages/performance_dashboard/users_tab" %>
  <% end %>
  <%= tab.slot(:tab, title: "Allocations") do %>
    <%= render partial: "pages/performance_dashboard/allocations_tab" %>
  <% end %>
  <% if FeatureService.enabled?("rollover.can_edit_current_and_next_cycles") %>
    <%= tab.slot(:tab, title: "Rollover") do %>
      <%= render partial: "pages/performance_dashboard/rollover_tab" %>
    <% end %>
  <% end %>
<% end %>
